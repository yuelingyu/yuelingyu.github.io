<header>
  <!-- Nav Bar -->
  <nav id="navbar" class="navbar navbar-light navbar-expand-sm {% if site.navbar_fixed %}fixed-top{% else %}sticky-top{% endif %}" role="navigation">
    <div class="container">
      {% if page.permalink != '/' %}
        <a class="navbar-brand title font-weight-lighter" href="{{ site.baseurl }}/">
          {% if site.title == 'blank' %}
            {% if site.first_name %}
              <span class="font-weight-bold">
                {{- site.first_name -}}
              </span>
            {% endif %}
            {% if site.middle_name %}
              {{- site.middle_name -}}
            {% endif %}
            {% if site.last_name %}
              {{- site.last_name -}}
            {% endif %}
          {% else %}
            {{- site.title -}}
          {% endif %}
        </a>
      {% elsif site.enable_navbar_social %}
        <!-- Social Icons -->
        <div class="navbar-brand social">{% include social.liquid %}</div>
      {% endif %}
      <!-- Navbar Toggle -->
      <button
        class="navbar-toggler collapsed ml-auto"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar top-bar"></span>
        <span class="icon-bar middle-bar"></span>
        <span class="icon-bar bottom-bar"></span>
      </button>

      <div class="collapse navbar-collapse text-right" id="navbarNav">
        <ul class="navbar-nav ml-auto flex-nowrap">
          {% for page in site.pages %}
            {% if page.permalink == '/' %} {% assign about_title = page.title %} {% endif %}
          {% endfor %}            
          <!-- About -->
          <li class="nav-item {% if page.permalink == '/en/about/' or page.permalink == '/zh/about/' or page.permalink == '/about/' %}active{% endif %}">
            {% if page.url contains '/zh/' %}
              {% assign current_lang = "zh" %}
            {% else %}
              {% assign current_lang = "en" %}
            {% endif %}
            <a class="nav-link" href="{% if current_lang == 'zh' %}{{ site.baseurl }}/zh/about/{% else %}{{ site.baseurl }}/about/{% endif %}">>
              {{ site.data.i18n[current_lang].navbar.about | default: "About" }}
              {% if page.permalink == '/en/about/' or page.permalink == '/zh/about/' or page.permalink == '/about/' %}
                <span class="sr-only">(current)</span>
              {% endif %}
            </a>
          </li>          
          <!-- Other pages -->
          {% assign sorted_pages = site.pages | sort: 'nav_order' %}
          {% for p in sorted_pages %}
            {% if p.nav and p.autogen == null %}
              {% comment %} 确定当前页面的语言 {% endcomment %}
              {% if page.url contains '/zh/' %}
                {% assign current_lang = "zh" %}
              {% else %}
                {% assign current_lang = "en" %}
              {% endif %}
              
              {% comment %} 只显示与当前语言匹配的页面 {% endcomment %}
              {% assign show_page = false %}
              {% if p.lang == current_lang %}
                {% assign show_page = true %}
              {% elsif p.lang == null and current_lang == "en" %}
                {% comment %} 对于没有lang属性的页面，只在英文模式下显示 {% endcomment %}
                {% assign show_page = true %}
              {% endif %}
              
              {% if show_page %}
             {% if p.dropdown %}
                {% assign has_active_child = false %}
                {% for child in p.children %}
                  {% if page.title == child.title %}
                    {% assign has_active_child = true %}
                  {% endif %}
                {% endfor %}
                <li class="nav-item dropdown {% if page.title == p.title or has_active_child %}active{% endif %}">
                  <a
                    class="nav-link dropdown-toggle"
                    href="#"
                    id="navbarDropdown"
                    role="button"
                    data-toggle="dropdown"
                    aria-haspopup="true"
                    aria-expanded="false"
                  >
                    {% if page.url contains '/zh/' %}
                      {% assign current_lang = "zh" %}
                    {% else %}
                      {% assign current_lang = "en" %}
                    {% endif %}
                    {{ site.data.i18n[current_lang].navbar[p.title] | default: p.title }}
                    {% if page.title == p.title or has_active_child %}
                      <span class="sr-only">(current)</span>
                    {% endif %}
                  </a>
                  <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                    {% for child in p.children %}
                      {% if child.title == 'divider' %}
                        <div class="dropdown-divider"></div>
                      {% else %}
                        <a
                          class="dropdown-item {% if page.title == child.title %}active{% endif %}"
                          href="{% if child.permalink contains '://' %}{{ child.permalink }}{% else %}{{ child.permalink | relative_url }}{% endif %}"
                        >
                          {{ site.data.i18n[current_lang].navbar[child.title] | default: child.title }}
                        </a>
                      {% endif %}
                    {% endfor %}
                  </div>
                </li>              
                {% else %}
                {% assign parent_link = p.permalink | remove: 'index.html' %}
                <li class="nav-item {% if page.url contains parent_link %}active{% endif %}">
                  {%- if p.permalink contains '://' -%}
                    {%- assign url = p.permalink -%}
                  {%- elsif p.permalink contains '/blog/' -%}
                    {%- assign url = '/blog/' -%}
                  {%- else -%}
                    {%- if page.url contains '/zh/' -%}
                      {%- assign current_lang = "zh" -%}
                    {%- else -%}
                      {%- assign current_lang = "en" -%}
                    {%- endif -%}
                    {%- assign base_path = p.url | remove_first: '/en/' | remove_first: '/zh/' -%}
                    {%- if base_path == p.url -%}
                      {%- assign url = p.url -%}
                    {%- else -%}
                      {%- assign url = '/' | append: current_lang | append: '/' | append: base_path -%}
                    {%- endif -%}
                  {%- endif -%}
                  <a class="nav-link" href="{{ url | relative_url }}">
                    {% if page.url contains '/zh/' %}
                      {% assign current_lang = "zh" %}
                    {% else %}
                      {% assign current_lang = "en" %}
                    {% endif %}
                    {{ site.data.i18n[current_lang].navbar[p.title] | default: p.title }}
                    {% if page.url contains p.url %}
                      <span class="sr-only">(current)</span>
                    {% endif %}                 
                  </a>                
                </li>
              {% endif %}
            {% endif %}
            {% endif %}
          {% endfor %}
          {% if site.search_enabled %}
            <!-- Search -->
            <li class="nav-item">
              <button id="search-toggle" title="Search" onclick="openSearchModal()">
                <span class="nav-link">ctrl k <i class="ti ti-search"></i></span>
              </button>
            </li>
          {% endif %}
          {% if site.enable_darkmode %}
            <!-- Toogle theme mode -->
            <li class="toggle-container">
              <button id="light-toggle" title="Change theme">
                <i class="ti ti-sun-moon" id="light-toggle-system"></i>
                <i class="ti ti-moon-filled" id="light-toggle-dark"></i>
                <i class="ti ti-sun-filled" id="light-toggle-light"></i>
              </button>
            </li>
          {% endif %}           
          
          {% if site.languages and site.languages.size > 1 %}
            <li class="toggle-container">
              {% comment %} 智能语言切换逻辑 {% endcomment %}
              {% assign current_page_path = page.url %}
              
              {% if current_page_path contains '/zh/' %}
                {% comment %} 当前是中文页面，显示英文切换 {% endcomment %}
                {% assign target_lang = 'en' %}
                {% assign display_text = site.data.i18n.zh.language_switcher | default: "English" %}
                {% if current_page_path == '/zh/about/' %}
                  {% assign target_url = '/about/' %}
                {% elsif current_page_path == '/zh/publications/' %}
                  {% assign target_url = '/publications/' %}                {% else %}
                  {% assign target_url = current_page_path | replace_first: '/zh', '' %}
                {% endif %}
              {% else %}
                {% comment %} 当前是英文页面，显示中文切换 {% endcomment %}
                {% assign target_lang = 'zh' %}
                {% assign display_text = site.data.i18n.en.language_switcher | default: "中文" %}
                {% if current_page_path == '/' or current_page_path == '/about/' %}
                  {% assign target_url = '/zh/about/' %}
                {% elsif current_page_path == '/publications/' %}
                  {% assign target_url = '/zh/publications/' %}
                {% else %}
                  {% assign target_url = '/zh' | append: current_page_path %}
                {% endif %}
              {% endif %}
              <a class="nav-link" href="{{ site.baseurl }}{{ target_url }}">{{ display_text }}</a>
            </li>
          {% endif %}
        </ul>
      </div>
    </div>
  </nav>
  {% if site.enable_progressbar %}
    <!-- Scrolling Progress Bar -->
    <progress id="progress" value="0">
      <div class="progress-container">
        <span class="progress-bar"></span>
      </div>
    </progress>
  {% endif %}
</header>
